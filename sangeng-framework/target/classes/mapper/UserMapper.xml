<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sangeng.mapper.UserMapper">

    <select id="selectUserNameBoolean" resultType="java.lang.Boolean">
        select * FROM sys_user where user_name = #{user_name}
    </select>
    <select id="selectPhoneBoolean" resultType="java.lang.Boolean">
        select * FROM sys_user where phonenumber = #{phonenumber}
    </select>
    <select id="selectEmailBoolean" resultType="java.lang.Boolean">
        select * FROM sys_user where email = #{email}
    </select>

</mapper>